@model TicketViewModel

@{
    ViewBag.Title = "Delete";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
    <h2 class="text-danger text-center">Are you sure you want to delete '@Model.TicketLabel'?</h2>
</div>
<br />
<form method="post" asp-area="" asp-action="Delete" asp-controller="Ticket" asp-route-Id="@Model.Id">
    <div class="form-group text-center m-3">
        <button type="submit" class="btn btn-danger">confirm</button>
    </div>
</form>

<br />

<div class="text-center">
    <a asp-area="" asp-controller="Ticket" asp-action="Index">Back to all</a>
</div>
