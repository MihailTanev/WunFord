@model IEnumerable<UserViewModel>

@{
    ViewBag.Title = "Users";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Account</th>
                <th>Roles</th>
                <th>Identity</th>
                <th>Password</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.Email</td>
                    <td>@user.FirstName @user.LastName</td>
                    <td><a asp-area="Admin" asp-controller="Users" asp-action="Edit" asp-route-userId="@user.Id" class="btn btn-primary">Edit</a></td>
                    <td><a asp-area="Admin" asp-controller="Users" asp-action="ManageRole" asp-route-userId="@user.Id" class="btn btn-outline-dark">Manage</a></td>
                    <td><a asp-area="Admin" asp-controller="Users" asp-action="Role" asp-route-userId="@user.Id" class="btn btn-success">Add</a></td>
                    <td><a asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" asp-route-userId="@user.Id" class="btn btn-warning">Change</a></td>
                    <td><a asp-area="Admin" asp-controller="Users" asp-action="Delete" asp-route-userId="@user.Id" class="btn btn-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
