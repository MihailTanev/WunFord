@model WunFord.Data.ViewModels.Status.StatusViewModel

@{
    ViewData["Title"] = "Edit";
}

<br />

<h1 class="text-center">Edit</h1>

<br />

<div class="row text-center">
    <div class="col-md-4 offset-md-4 text-center">
        <form asp-area="Admin" asp-controller="Status" asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Update Status" class="btn btn-outline-dark " />
            </div>
        </form>
    </div>
</div>

<br />

<div class="text-center">
    <a asp-area="Admin" asp-controller="Status" asp-action="Index">Back to all</a>
</div>
