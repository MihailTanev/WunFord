@model StatusViewModel

@{
    ViewData["Title"] = "Edit";
}

<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

<div class="container">
    <form asp-area="Admin" asp-controller="Status" asp-action="Edit" method="post">
        <div class="row">
            <div class="col-md-5 mx-auto text-center">
                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <br />
                <div class="form-group">
                    <input type="submit" value="Update Status" class="btn btn-outline-dark " />
                </div>
                <div class="text-center m-4">
                    <a asp-area="Admin" asp-controller="Status" asp-action="Index">Back to all</a>
                </div>
            </div>
        </div>
    </form>
</div>