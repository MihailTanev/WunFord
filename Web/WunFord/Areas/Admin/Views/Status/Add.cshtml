@model WunFord.Data.ViewModels.Status.AddStatusViewModel
@{
    ViewData["Title"] = "Add";
}

<br />

<h1 class="text-center">Add Status</h1>

<br />

<div class="row text-center">
    <div class="col-md-4 offset-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Add Status" class="btn btn-outline-dark" />
            </div>
        </form>
    </div>
</div>

<br />

<div class="text-center">
    <a asp-area="Admin" asp-controller="Status" asp-action="Index">Back to all</a>
</div>

