@model StatusViewModel

@{
    ViewData["Title"] = "Delete";
}


<div class="text-center">
    <h1 class="display-4">@ViewBag.Title</h1>
</div>

<div class="container">
    <h2 class="text-danger text-center">Are you sure you want to delete '@Model.Name'?</h2>
    <form method="post" asp-area="Admin" asp-action="Delete" asp-controller="Status" asp-route-Id="@Model.Id">
        <div class="row">
            <div class="col-md-5 mx-auto text-center">
                <div class="m-3">
                    <button type="submit" class="btn btn-outline-danger">confirm</button>
                </div>
            </div>
        </div>
    </form>
</div>